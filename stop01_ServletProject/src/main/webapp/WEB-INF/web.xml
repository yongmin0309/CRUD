<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>stop01_ServletProject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
  		<servlet-name>firstServlet</servlet-name>
  		<servlet-class>com.edu.ex.FirstServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>firstServlet</servlet-name>
  		<url-pattern>/FS</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>NextServlet</servlet-name>
  		<servlet-class>com.edu.ex.NextServlet</servlet-class>
  </servlet>
  
   <servlet-mapping>
  		<servlet-name>NextServlet</servlet-name>
  		<url-pattern>/next</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>HelloServlet</servlet-name>
  		<servlet-class>com.edu.ex.HelloServlet</servlet-class>
  </servlet>
  
   <servlet-mapping>
  		<servlet-name>HelloServlet</servlet-name>
  		<url-pattern>/hello</url-pattern>
  </servlet-mapping>
  
  <filter>
  		<filter-name>flow</filter-name>
  		<filter-class>com.edu.filter.FlowFilter</filter-class>
  </filter>
  
  <filter-mapping>
  		<filter-name>flow</filter-name>
  		<url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>